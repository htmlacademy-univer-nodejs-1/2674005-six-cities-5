{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "bin": {
    "six-cities": "./dist/main.js"
  },
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "dev": "npm run build && node --loader pino-pretty/esm-loader ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "node ./mock-server.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/convict": "^6.1.6",
    "@types/express": "^5.0.6",
    "@types/got": "^9.6.12",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "pino-pretty": "^13.1.2",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "tsx": "^4.20.6",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "11.5.0",
    "bcrypt": "^6.0.0",
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-async-handler": "^1.2.0",
    "got": "^14.6.3",
    "http-status-codes": "^2.3.0",
    "inversify": "6.0.1",
    "jose": "^6.1.3",
    "mime-types": "^3.0.2",
    "mongoose": "7.5.3",
    "multer": "^2.0.2",
    "nanoid": "^3.3.11",
    "pino": "^10.1.0",
    "reflect-metadata": "^0.2.2"
  }
}
